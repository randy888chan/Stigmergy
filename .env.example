# .env.example
# Copy this file to .env and fill in your credentials.

# --- LLM Provider Configuration ---
# Point this to any OpenAI-compatible API endpoint.
LLM_BASE_URL=https://api.openai.com/v1
LLM_API_KEY=your_llm_api_key_here

# --- Web Search API Configuration ---
# Recommended: Get a free key from Serper.dev for the search tool.
SEARCH_API_KEY=your_serper_api_key_here

# --- Neo4j Database Configuration ---
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_database_password

# --- Pheromind Engine Configuration ---
# The port the local engine will run on.
PORT=3000

# The URL the installer uses to configure the IDE. Should match the PORT.
ENGINE_URL=http://localhost:3000
