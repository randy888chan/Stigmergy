    "@radix-ui/react-separator": "^1.1.0",
    "@stigmergy/coderag": "workspace:*",
    "@supabase/supabase-js": "^2.38.0",
    "@xterm/addon-fit": "^0.10.0",
    "ai": "^5.0.76",
    "axios": "^1.12.2",
