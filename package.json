{
  "name": "@randy888chan/stigmergy",
  "version": "2.2.0",
  "description": "Stigmergy: The Autonomous AI Development System with Universal MCP Integration for seamless IDE coordination.",
  "type": "module",
  "main": "engine/server.js",
  "files": [
    "dashboard/public/",
    "docs/",
    "engine/",
    "evaluation/",
    "scripts/",
    "services/",
    "src/",
    "tests/",
    "tools/",
    "utils/",
    ".stigmergy-core/",
    "README.md",
    "ecosystem.config.js",
    "stigmergy.config.js"
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "bun run engine/main.js",
    "start:mock": "NODE_ENV=test USE_MOCK_AI=true USE_MOCK_SWARM=true STIGMERGY_PORT=3011 OPENROUTER_API_KEY=mock-key OPENROUTER_BASE_URL=http://localhost/mock bun run engine/main.js",
    "dev": "concurrently \"bun --hot run engine/server.js\" \"bun run watch:dashboard\"",
    "dev:ai": "bun run build:dashboard && bun --hot engine/server.js",
    "dev:reset": "sudo docker compose down -v && sudo docker compose up --build stigmergy",
    "test": "bun test tests/unit/** tests/integration/** && bun run test:e2e",
    "test:local": "bun run test:unit",
    "test:unit": "bun test tests/unit/ai/** tests/unit/tools/** tests/unit/utils/** tests/unit/HttpStorageAdapter.test.js tests/unit/localization.test.js tests/unit/system_validator.test.js",
    "test:unit:frontend": "bun test --preload ./tests/setup-dom.js tests/unit/dashboard/**",
    "test:integration": "bun test tests/integration/**",
    "test:e2e": "bun run tests/e2e/standalone_api_mission.test.js",
    "test:e2e:ci": "bun run start:mock & wait-on http://localhost:3011 && npx playwright test tests/e2e/**",
    "test:watch": "bun test --watch",
    "build": "bun run build:dashboard && bun run build:agents",
    "build:dashboard": "npx tailwindcss -c ./dashboard/tailwind.config.js -i ./dashboard/src/index.css -o ./dashboard/public/index.css && bun build ./dashboard/src/index.js --outdir ./dashboard/public",
    "watch:dashboard": "concurrently \"tailwindcss -c ./dashboard/tailwind.config.js -i ./dashboard/src/index.css -o ./dashboard/public/index.css -w\" \"bun build ./dashboard/src/index.js --outdir ./dashboard/public --watch\"",
    "build:agents": "bun run cli/commands/build.js",
    "health-check": "bun run scripts/health-check.js",
    "validate": "bun run cli/index.js validate",
    "init": "bun run cli/index.js init"
  },
  "dependencies": {
    "@ai-sdk/google": "^2.0.26",
    "@ai-sdk/openai": "^2.0.59",
    "@ai-sdk/react": "^2.0.86",
    "@babel/parser": "^7.28.4",
    "@babel/traverse": "^7.28.4",
    "@dopplerhq/node-sdk": "^1.3.0",
    "@hono/node-server": "^1.19.6",
    "@hono/node-ws": "^1.2.0",
    "@langchain/langgraph": "^1.0.1",
    "@mendable/firecrawl-js": "^4.4.1",
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@octokit/rest": "^22.0.0",
    "@opentelemetry/auto-instrumentations-node": "^0.67.0",
    "@opentelemetry/sdk-node": "^0.208.0",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.0",
