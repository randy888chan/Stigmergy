{
  "name": "@randy888chan/stigmergy",
  "version": "2.2.0",
  "description": "Stigmergy: The Autonomous AI Development System with Universal MCP Integration for seamless IDE coordination.",
  "type": "module",
  "main": "engine/server.js",
  "bin": {
    "stigmergy": "cli/index.js"
  },
  "files": [
    "cli/",
    "dashboard/public/",
    "docs/",
    "engine/",
    "evaluation/",
    "scripts/",
    "services/",
    "src/",
    "tests/",
    "tools/",
    "utils/",
    ".stigmergy-core/",
    "README.md",
    "ecosystem.config.js",
    "stigmergy.config.js"
  ],
  "scripts": {
    "start": "bun run engine/server.js",
    "start:mock": "USE_MOCK_AI=true STIGMERGY_PORT=3011 bun run engine/server.js",
    "dev": "concurrently \"bun --hot run engine/server.js\" \"bun run watch:dashboard\"",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "build": "bun run build:dashboard && bun run build:agents",
    "build:dashboard": "tailwindcss -c ./dashboard/tailwind.config.js -i ./dashboard/src/index.css -o ./dashboard/public/index.css && bun build ./dashboard/src/index.js --outdir ./dashboard/public",
    "watch:dashboard": "concurrently \"tailwindcss -c ./dashboard/tailwind.config.js -i ./dashboard/src/index.css -o ./dashboard/public/index.css -w\" \"bun build ./dashboard/src/index.js --outdir ./dashboard/public --watch\"",
    "build:agents": "bun run cli/commands/build.js",
    "health-check": "bun run scripts/health-check.js",
    "validate": "bun run cli/index.js validate",
    "init": "bun run cli/index.js init"
  },
  "dependencies": {
    "@ai-sdk/google": "^1.0.2",
    "@ai-sdk/openai": "^2.0.23",
    "@babel/parser": "^7.28.4",
    "@babel/traverse": "^7.28.4",
    "@hono/node-server": "^1.19.5",
    "@hono/node-ws": "^1.2.0",
    "@langchain/langgraph": "^0.0.11",
    "@mendable/firecrawl-js": "^0.0.28",
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@octokit/rest": "^20.0.2",
    "@supabase/supabase-js": "^2.38.0",
    "@types/tmp": "^0.2.6",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.5.0",
    "ai": "^5.0.48",
    "axios": "^1.12.2",
    "chalk": "^5.3.0",
    "cheerio": "^1.0.0-rc.12",
    "chrome-devtools-mcp": "^0.4.0",
    "commander": "^12.0.0",
    "compromise": "^14.10.0",
    "express": "^4.18.2",
    "file-type": "^18.7.0",
    "github-mcp-server": "^1.8.7",
    "glob": "^10.3.10",
    "hono": "^4.9.8",
    "inquirer": "^12.9.4",
    "js-yaml": "^4.1.0",
