{
  "name": "@randy888chan/stigmergy",
  "version": "2.2.0",
  "description": "Stigmergy: The Autonomous AI Development System with Universal MCP Integration for seamless IDE coordination.",
  "type": "module",
  "main": "engine/server.js",
  "files": [
    "dashboard/public/",
    "docs/",
    "engine/",
    "evaluation/",
    "scripts/",
    "services/",
    "src/",
    "tests/",
    "tools/",
    "utils/",
    ".stigmergy-core/",
    "README.md",
    "ecosystem.config.js",
    "stigmergy.config.js"
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "bun run engine/main.js",
    "start:mock": "NODE_ENV=test USE_MOCK_AI=true STIGMERGY_PORT=3011 OPENROUTER_API_KEY=mock-key OPENROUTER_BASE_URL=http://localhost/mock bun run engine/main.js",
    "dev": "concurrently \"bun --hot run engine/server.js\" \"bun run watch:dashboard\"",
    "dev:ai": "bun run build:dashboard && bun --hot engine/server.js",
    "dev:reset": "sudo docker compose down -v && sudo docker compose up --build stigmergy",
    "test": "bun run test:unit && bun run test:integration",
    "test:local": "bun run test:unit",
    "test:unit": "bun test tests/unit/**",
    "test:integration": "bun test tests/integration/**",
    "test:e2e": "node ./node_modules/playwright/lib/program.js test",
    "test:e2e:local": "bun run start:mock & wait-on --timeout 60000 http-get://localhost:3011 && bun run test:e2e; kill $!",
    "test:e2e:ci": "bun run start:mock & wait-on --timeout 60000 http-get://localhost:3011 && xvfb-run bun run test:e2e; kill $!",
    "test:e2e:stable": "xvfb-run node ./node_modules/playwright/lib/program.js test",
    "test:e2e:detached": "nohup bun run start:mock &",
    "test:watch": "bun test --watch",
    "build": "bun run build:dashboard && bun run build:agents",
    "build:dashboard": "npx tailwindcss -c ./dashboard/tailwind.config.js -i ./dashboard/src/index.css -o ./dashboard/public/index.css && bun build ./dashboard/src/index.js --outdir ./dashboard/public",
    "watch:dashboard": "concurrently \"tailwindcss -c ./dashboard/tailwind.config.js -i ./dashboard/src/index.css -o ./dashboard/public/index.css -w\" \"bun build ./dashboard/src/index.js --outdir ./dashboard/public --watch\"",
    "build:agents": "bun run cli/commands/build.js",
    "health-check": "bun run scripts/health-check.js",
    "validate": "bun run cli/index.js validate",
    "init": "bun run cli/index.js init"
  },
  "dependencies": {
    "@ai-sdk/google": "^1.0.2",
    "@ai-sdk/openai": "^2.0.53",
    "@ai-sdk/react": "^2.0.70",
    "@babel/parser": "^7.28.4",
    "@babel/traverse": "^7.28.4",
    "@dopplerhq/node-sdk": "^1.2.0",
    "@hono/node-server": "^1.19.5",
    "@hono/node-ws": "^1.2.0",
    "@langchain/langgraph": "^1.0.1",
    "@mendable/firecrawl-js": "^0.0.28",
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@octokit/rest": "^22.0.0",
    "@opentelemetry/auto-instrumentations-node": "^0.45.0",
    "@opentelemetry/sdk-node": "^0.45.0",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-progress": "^1.1.7",
