{
  "name": "@randy888chan/stigmergy",
  "version": "2.2.0",
  "description": "Stigmergy: The Autonomous AI Development System.",
  "type": "module",
  "main": "engine/server.js",
  "bin": {
    "stigmergy": "cli/index.js"
  },
  "scripts": {
    "stigmergy:start": "node engine/server.js",
    "build": "node cli/index.js build",
    "pretest": "node scripts/setup-lightweight.js",
    "test": "jest",
    "test:neo4j": "node .stigmergy-core/utils/neo4j_diagnostic.js",
    "neo4j:setup": "node scripts/neo4j-setup.js",
    "test-db": "node scripts/test-neo4j.js",
    "format": "prettier --write \"**/*.{md,js,json,yml,yaml}\"",
    "prepare": "husky install",
    "cleanup:templates": "node scripts/cleanup-templates.js",
    "cleanup:docs": "node scripts/cleanup-docs.js",
    "optimize": "npm run cleanup:templates && npm run cleanup:docs",
    "setup:complete": "node scripts/setup-lightweight.js",
    "setup:neo4j-only": "node scripts/setup-neo4j.js",
    "setup:gemini": "node scripts/setup-gemini.js",
    "state:monitor": "node scripts/monitor-state.js",
    "health:check": "node scripts/check-health.js",
    "test:autonomy": "jest tests/integration/autonomous-flow.test.js",
    "test:neo4j-e2e": "jest tests/e2e/neo4j-setup.test.js",
    "recover-brain": "node cli/index.js restore",
    "validate": "node cli/index.js validate",
    "validate:agents": "node cli/index.js validate:agents"
  },
  "files": [
    "cli/",
    "engine/",
    "tools/",
    "services/",
    "ai/",
    "builder/",
    ".stigmergy-core/",
    ".env.example"
  ],
  "dependencies": {
    "@ai-sdk/anthropic": "^2.0.4",
    "@ai-sdk/fireworks": "^1.0.7",
    "@ai-sdk/openai": "^2.0.15",
    "@babel/parser": "^7.24.5",
    "@babel/traverse": "^7.24.5",
    "@google/generative-ai": "^0.24.1",
    "@langchain/community": "^0.3.50",
    "@langchain/core": "^0.3.70",
    "@langchain/langgraph": "^0.4.5",
    "@langchain/openai": "^0.6.7",
    "@mendable/firecrawl-js": "^1.29.3",
    "@modelcontextprotocol/sdk": "^1.12.1",
    "ai": "^4.1.17",
    "axios": "^1.7.2",
    "boxen": "^7.1.1",
    "chalk": "^4.1.2",
    "check-disk-space": "^3.4.0",
    "chokidar": "^4.0.3",
    "cli-spinner": "^0.2.10",
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "figlet": "^1.7.0",
    "glob": "^10.4.2",
    "ignore": "^5.3.1",
    "inquirer": "^8.2.4",
    "js-yaml": "^4.1.0",
    "memfs": "^4.9.3",
    "neo4j-driver": "^5.20.0",
    "node-cache": "^5.1.2",
    "open": "^10.1.0",
    "ora": "^5.4.1",
    "p-limit": "^4.0.0",
    "proper-lockfile": "^4.1.2",
    "semver": "^7.7.2",
    "uuid": "^9.0.1",
    "zod": "^3.25.76"
  },
  "keywords": [
    "stigmergy",
    "ai",
    "orchestrator",
    "development",
    "agents",
    "swarm",
    "autonomous"
  ],
  "author": "Randy Chan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/randy888chan/Stigmergy.git"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "@types/vscode": "^1.89.0",
    "babel-plugin-transform-import-meta": "^2.3.3",
    "fs-extra": "^11.3.1",
    "glob": "^10.4.1",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "jest-esm-transformer": "^1.0.0",
    "jest-transform-stub": "^2.0.0",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "supertest": "^7.0.0",
    "@vscode/test-electron": "^2.4.0"
  },
  "lint-staged": {
    "**/*.{md,js,json,yml,yaml}": [
      "prettier --write"
    ]
  }
}
